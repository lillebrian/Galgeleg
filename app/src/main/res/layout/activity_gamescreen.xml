<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C6D70"
    tools:context=".activities.activity_gamescreen">

    <EditText
        android:id="@+id/gamescreen_gæt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Indtast et bogstav"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamescreen_forkert" />

    <ImageView
        android:id="@+id/gamescreen_galgeImage"
        android:layout_width="261dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/gamescreen_ordtilgæt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamescreen_title"
        app:srcCompat="@drawable/galge" />

    <TextView
        android:id="@+id/gamescreen_forkert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Forkerte gæt\n"
        app:layout_constraintBottom_toTopOf="@+id/gamescreen_gæt"
        app:layout_constraintEnd_toEndOf="@+id/gamescreen_ordtilgæt"
        app:layout_constraintTop_toBottomOf="@+id/gamescreen_ordtilgæt" />

    <TextView
        android:id="@+id/gamescreen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="82dp"
        android:text="Galgeleg"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/gamescreen_galgeImage"
        app:layout_constraintEnd_toStartOf="@+id/gamescreen_timer"
        app:layout_constraintStart_toStartOf="@+id/gamescreen_timer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gamescreen_ordtilgæt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Du skal gætte ordet\n"
        app:layout_constraintBottom_toTopOf="@+id/gamescreen_forkert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamescreen_galgeImage" />

    <TextView
        android:id="@+id/gamescreen_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textColor="#EEFF0000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:hint="Bogstavet q vinder spillet"
        app:layout_constraintStart_toStartOf="@+id/gamescreen_gæt"
        app:layout_constraintTop_toBottomOf="@+id/gamescreen_gæt" />
</androidx.constraintlayout.widget.ConstraintLayout>