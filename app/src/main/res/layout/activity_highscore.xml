<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activity_highscore">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hs_recyclerView"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="50dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hs_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="20dp"
        android:text="Bruger"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/hs_recyclerView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hs_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:text="GÃ¦t"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/hs_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/hs_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>